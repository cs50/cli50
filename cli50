#!/usr/bin/env python

import argparse
import distutils.spawn
import os
import subprocess
import sys

def main():

    # parse command-line arguments
    parser = argparse.ArgumentParser()
    parser.add_argument("directory", nargs="?", default=os.getcwd())
    args = vars(parser.parse_args())

    # check for docker
    if distutils.spawn.find_executable("docker"):
        parser.error("docker not installed")

    # ensure directory exists
    directory = os.path.realpath(args["directory"])
    if not os.path.isdir(directory):
        parser.error("{}: no such directory".format(args["directory"]))

    # update image
    subprocess.call(["docker", "pull", "cs50/cli"])

    # mount directory in CS50 CLI
    subprocess.call([
        "docker", "run",
            "--hostname", "cli50",
            "--interactive",
            "--publish-all",
            "--rm",
            "--tty",
            "--volume", directory + ":/root",
            "--workdir", "/root",
            "cs50/cli"
            ])

if __name__ == "__main__":
    main()
